<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <SeekBar
        android:layout_width="@dimen/seekbar_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin"
        android:progress="50"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginRight="@dimen/def_margin">

        <ImageButton
            style="@style/PlayerItem.01"
            />

        <ImageButton
            style="@style/PlayerItem.02"
            />

        <ImageButton
            style="@style/PlayerItem.03"
            />

        <ImageButton
            style="@style/PlayerItem.04"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginRight="@dimen/def_margin">

        <ImageButton
            style="@style/PlayerItem.05"
            />

        <ImageButton
            style="@style/PlayerItem.06"
            />

        <ImageButton
            style="@style/PlayerItem.07"
            />

        <ImageButton
            style="@style/PlayerItem.08"
            />
    </LinearLayout>

</LinearLayout>