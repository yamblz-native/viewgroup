<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/btn_arrow_left"
        style="@style/Item.00"/>

    <ImageView
        android:layout_toEndOf="@+id/btn_arrow_left"
        android:layout_toRightOf="@+id/btn_arrow_left"
        android:id="@+id/btn_play"
        style="@style/Item.01"/>

    <ImageView
        android:layout_toEndOf="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_play"
        android:id="@+id/btn_arrow_right"
        style="@style/Item.02"/>

    <ImageView
        android:layout_below="@+id/btn_arrow_left"
        android:id="@+id/btn_repeat"
        style="@style/Item.10"/>

    <ImageView
        android:layout_toEndOf="@+id/btn_repeat"
        android:layout_toRightOf="@+id/btn_repeat"
        android:layout_below="@+id/btn_play"
        android:id="@+id/btn_rating"
        style="@style/Item.11"/>

    <ImageView
        android:layout_toEndOf="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_play"
        android:layout_below="@id/btn_arrow_right"
        android:id="@+id/btn_random"
        style="@style/Item.12"/>


</RelativeLayout>